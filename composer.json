{
    "name": "phpcolor/phpcolor",
    "description": "PHP Color",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "php",
        "color"
    ],
    "authors": [
        {
            "name": "Simon André",
            "email": "smn.andre@gmail.com"
        },
        {
            "name": "Raphaël Geffroy",
            "email": "raphael@geffroy.dev"
        }
    ],
    "homepage": "https://phpcolor.dev",
    "support": {
        "issues": "https://github.com/phpcolor/phpcolor/issues",
        "source": "https://github.com/phpcolor/phpcolor/"
    },
    "require": {
        "php": ">=8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "PhpColor\\": "src/"
        },
        "exclude-from-classmap": [
            "tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "PhpColor\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "8.3.0"
        },
        "sort-packages": true
    }
}
